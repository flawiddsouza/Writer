{
  "name": "writer-sync-server",
  "version": "2.0.0",
  "description": "Modern sync server for Writer Android app - Built with Bun + Elysia + Drizzle",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/jwt": "^1.1.1",
    "drizzle-orm": "^0.36.4",
    "elysia": "^1.1.23",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.13",
    "drizzle-kit": "^0.28.1"
  }
}
